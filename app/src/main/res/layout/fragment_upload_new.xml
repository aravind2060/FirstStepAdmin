<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/root_UploadNewFragment"
    tools:context=".BottomNavigationThings.UploadNewProducts.UploadNewFragment">
     <androidx.appcompat.widget.Toolbar
         android:layout_width="match_parent"
         android:layout_height="?attr/actionBarSize"
         android:background="@color/DodgerBlue"
         app:title="Upload A New Product"
         app:titleTextColor="@color/White"
         />
   <com.google.android.material.card.MaterialCardView
       android:id="@+id/Upload_materialCard"
       android:layout_width="match_parent"
       android:layout_height="300dp"
       android:layout_margin="10dp"
       app:cardCornerRadius="15dp"
       >
    <ImageView
        android:id="@+id/Upload_newImage"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/ic_cam"
        android:scaleType="fitXY"
        />
   </com.google.android.material.card.MaterialCardView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:translationZ="4dp"
        android:background="@drawable/rounded_top_card"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/ProductName"
                style="@style/title"
                android:text="ProductName"
                android:layout_marginBottom="4dp"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/ProductPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_gravity="center" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
             <ImageView
                 android:layout_width="40dp"
                 android:layout_height="60dp"
                 android:layout_marginStart="8dp"
                 android:src="@drawable/ic_order"
                 />
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/ProductDescription_TxtLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:errorEnabled="true"
                    android:layout_margin="5dp"
                    android:hint="Description"
                    >
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/ProductDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/ic_order"
                    />
                <RadioGroup
                    android:id="@+id/radio_group_ProductCategoryByGender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                <RadioButton
                    android:id="@+id/MenFootWear_cb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MenFootWear"
                    android:textSize="18sp"
                    />
                <RadioButton
                    android:id="@+id/WomenFootWear_cb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="WomenFootWear"
                    android:textSize="18sp"
                    />
                </RadioGroup>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical">

                   <RadioGroup
                       android:id="@+id/radio_group_ProductCategoryByMaterial"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="vertical"
                       android:layout_marginStart="20dp"
                       >
                   <RadioButton
                       android:id="@+id/Formal_cb"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Formal"
                       />
                   <RadioButton
                       android:id="@+id/Casual_cb"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Casual"
                       />
                   <RadioButton
                       android:id="@+id/Sports_cb"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Sports"
                       />
                   <RadioButton
                       android:id="@+id/Smart_cb"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Smart"
                       />
                   <RadioButton
                       android:id="@+id/Ethnic_cb"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Ethnic"
                       />
                   <RadioButton
                       android:id="@+id/Sneakers_cb"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Sneakers"
                       />
                   </RadioGroup>
           </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />
            <Button
                android:id="@+id/Upload_Btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/buttons"
                android:text="Upload"
                android:textColor="@color/White"
                android:layout_margin="8dp"
                />
        </LinearLayout>

    </ScrollView>
</LinearLayout>